{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "roomMgr.js",
            "cwd": "${workspaceFolder}\\backend"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: backend",
            "request": "launch",
            "command": "npm run backend",
            "cwd": "${workspaceFolder}\\backend"
        }
    ]
}